{
  "mcpServers": {
       
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time"
      ],
      "alwaysAllow": [
        "get_current_time",
        "convert_time"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": ""
      },
      "alwaysAllow": [
        "resolve-library-id",
        "get-library-docs"
      ]
    },
    "perplexity": {
      "command": "npx",
      "args": [
        "-y",
        "@jschuller/perplexity-mcp"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      },
      "alwaysAllow": [
        "search"
      ]
    },
    "BrightData": {
      "command": "npx",
      "args": [
        "@brightdata/mcp"
      ],
      "env": {
        "BRIGHTDATA_API_KEY": "${BRIGHTDATA_API_KEY}"
      },
      "type": "stdio",
      "alwaysAllow": [
        "search_engine",
        "scrape_as_markdown",
        "search_engine_batch",
        "scrape_batch"
      ]
    }
       
    }
}