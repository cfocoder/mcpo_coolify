{
  "mcpServers": 
    {
        "context7": {
        "command": "npx",
        "args": [
            "-y",
            "@upstash/context7-mcp"
        ],
        "env": {
            "DEFAULT_MINIMUM_TOKENS": ""
        },
        "alwaysAllow": [
            "resolve-library-id",
            "get-library-docs"
        ]
        },
        "time": {
        "command": "uvx",
        "args": [
            "mcp-server-time"
        ],
        "alwaysAllow": [
            "get_current_time",
            "convert_time"
        ]
        },
        "exa": {
        "command": "npx",
        "args": [
            "-y",
            "@smithery/cli@latest",
            "run",
            "exa",
            "--key",
            "${EXA_API_KEY}"
        ],
        "env": {
            "EXA_API_KEY": "${EXA_API_KEY}"
        }
        },
        "perplexity": {
        "command": "npx",
        "args": [
            "-y",
            "server-perplexity-ask"
        ],
            "env": {
            "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
            },
        "type": "stdio",
        "alwaysAllow": [
            "perplexity_ask"
        ]
        },
        "brightdata": {
        "command": "npx",
        "args": [
            "server-brightdata-scrape",
            "--key",
            "${BRIGHTDATA_API_KEY}"
        ],
        "env": {
            "BRIGHTDATA_API_KEY": "${BRIGHTDATA_API_KEY}"
        },
        "type": "stdio",
        "alwaysAllow": [
            "search_engine",
            "scrape_as_markdown",
            "search_engine_batch",
            "scrape_batch"
        ]
        }
        
    }
}