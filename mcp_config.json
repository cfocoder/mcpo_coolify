{
  "mcpServers": 
    {
        "context7": {
        "command": "npx",
        "args": [
            "-y",
            "@upstash/context7-mcp"
        ],
        "env": {
            "DEFAULT_MINIMUM_TOKENS": ""
        },
        "alwaysAllow": [
            "resolve-library-id",
            "get-library-docs"
        ]
        },
        "time": {
        "command": "uvx",
        "args": [
            "mcp-server-time"
        ],
        "alwaysAllow": [
            "get_current_time",
            "convert_time"
        ]
        },
        "exa": {
        "command": "npx",
        "args": [
            "-y",
            "@smithery/cli@latest",
            "run",
            "exa",
            "--key",
            "5476d42e-7554-4e5b-9099-c60c5250ba68",
            "--profile",
            "agreeable-cardinal-lr8729"
        ]
        },
        "BrightData": {
            "command": "npx",
            "args": [
                "@brightdata/mcp"
            ],
            "env": {
                "API_TOKEN": "${BRIGHTDATA_API_TOKEN}"
            },
            "type": "stdio",
            "alwaysAllow": [
                "search_engine",
                "scrape_as_markdown",
                "search_engine_batch",
                "scrape_batch"
            ]
        },
        "perplexity": {
            "command": "npx",
            "args": [
                "-y",
                "server-perplexity-ask"
            ],
            "env": {
                "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
            },
            "type": "stdio",
            "alwaysAllow": [
                "perplexity_ask"
            ]
        }
       
    }
}