{
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time"
      ],
      "alwaysAllow": [
        "get_current_time",
        "convert_time"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": ""
      },
      "alwaysAllow": [
        "resolve-library-id",
        "get-library-docs"
      ]
    },
    "perplexity": {
      "command": "npx",
      "args": [
        "-y",
        "@jschuller/perplexity-mcp"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      },
      "alwaysAllow": [
        "search"
      ]
    },
    "mcp_weather_server": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@isdaniel/mcp_weather_server",
        "--key",
        "${SMITHERY_KEY}",
        "--profile",
        "${SMITHERY_PROFILE}"
      ]
    },
    "banxico": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/cfocoder/banxico_mcp",
        "banxico-mcp-server"
      ],
      "env": {
        "BANXICO_API_TOKEN": "${BANXICO_API_TOKEN}"
      }
    },
    "mcpsemanticscholar": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@hamid-vakilzadeh/mcpsemanticscholar",
        "--key",
        "${SMITHERY_KEY}",
        "--profile",
        "${SMITHERY_PROFILE}"
      ]
    },
    "wolfram-llm-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@henryhawke/wolfram-llm-mcp",
        "--key",
        "${SMITHERY_KEY}",
        "--profile",
        "${SMITHERY_PROFILE}"
      ]
    },
    "ref-tools-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@ref-tools/ref-tools-mcp",
        "--key",
        "${SMITHERY_KEY}",
        "--profile",
        "${SMITHERY_PROFILE}"
      ]
    },
    "microsoft_learn_mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@microsoft/learn_mcp",
        "--key",
        "${SMITHERY_KEY}"
      ]
    },
    "linkup-mcp-server": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@LinkupPlatform/linkup-mcp-server",
        "--key",
        "${SMITHERY_KEY}",
        "--profile",
        "${SMITHERY_PROFILE}"
      ]
    },
    "flights": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@punitarani/fli",
        "--key",
        "${SMITHERY_KEY}"
      ]
    },
    "docfork": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@docfork/mcp",
        "--key",
        "${SMITHERY_KEY}"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@kiennd/reference-servers",
        "--key",
        "${SMITHERY_KEY}"
      ]
    },
    "docling": {
      "command": "uvx",
      "args": [
        "--from=docling-mcp",
        "docling-mcp-server"
      ]
    },
    "vegalite": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/isaacwasserman/mcp-vegalite-server",
        "mcp-vegalite-server", 
        "--output_type",
        "png"
      ]
    }
  }
}